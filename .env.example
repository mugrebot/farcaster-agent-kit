# Neynar Configuration
NEYNAR_API_KEY=your-neynar-api-key-here
NEYNAR_SIGNER_UUID=your-signer-uuid-here

# Farcaster Identity
FARCASTER_USERNAME=your-username
FARCASTER_FID=your-fid

# Agent Configuration
POSTS_PER_WINDOW=2
REPLY_TO_MENTIONS=true

# Optional: Webhook configuration
WEBHOOK_PORT=3000
WEBHOOK_SECRET=

# LLM Configuration (Optional - defaults to pattern mode)
# Choose: pattern, openai, anthropic, groq, local
LLM_PROVIDER=pattern

# Provider-specific settings (only needed if not using pattern mode)
# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-5-haiku-20241022

# Groq
GROQ_API_KEY=gsk_...
GROQ_MODEL=llama-3.1-8b-instant

# Local LLM (Ollama)
LOCAL_MODEL=llama3.2:3b
LOCAL_BASE_URL=http://localhost:11434

# LLM Generation Settings
LLM_MAX_TOKENS=150
LLM_TEMPERATURE=0.8

# DO NOT COMMIT THIS FILE WITH REAL VALUES
# Copy to .env and fill with your actual values